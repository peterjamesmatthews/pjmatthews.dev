{
  "version": "2.0.0",
  "tasks": [
		{
			"type": "shell",
			"command": "pnpm i",
			"label": "Install Web Application Dependencies",
			"options": {
				"cwd": "${workspaceFolder}/web-app"
			}
		},
		{
			"type": "shell",
			"command": "pnpm astro dev",
			"label": "Launch Web Application Development Server",
			"options": {
				"cwd": "${workspaceFolder}/web-app"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"beginsPattern": "started in",
					"endsPattern": "."
				}
			}
		},
	]
}
