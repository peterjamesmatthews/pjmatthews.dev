<html lang="en">
  <body>
    <a href="/">Home</a><br />
    <p>Counter value: <span id="count">0</span></p>
    <button id="counter" style="user-select: none;">Count</button>
    <br />
    <a href="/counter/component">Counter using an Astro component</a>
    <br />
    <a href="/counter/endpoint">Counter using an Endpoint</a>
    <br />
    <a href="/counter/wasm">Counter using WebAssembly</a>
    <br />
    <a href="/counter/worker">Counter using a Web Worker</a>
    <br />
    <a href="/counter/solid-js">Counter using SolidJS</a>
    <br />
    <a href="/counter/web-storage">Counter using Web Storage</a>
  </body>
  <script>
    /**
     * The `span` element that displays the count.
     * @type {HTMLSpanElement}
     */
    const span: HTMLSpanElement = document.getElementById("count");

    /**
     * The value of the counter.
     * @type {number}
     */
    let count: number = Number.parseInt(span.textContent);

    // When the button is clicked, increment count and put it's new value into span.
    document
      .getElementById("counter")
      .addEventListener(
        "click",
        () => (span.textContent = (++count).toString())
      );
  </script>
</html>
